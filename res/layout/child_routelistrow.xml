<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/routeSimpleList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stoprow_bg_main"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/headsignContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/padding"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:contentDescription="@string/main_stops_button_desc"
            android:gravity="bottom|center"
            android:src="@color/bg3" />

        <TextView
            android:id="@+id/stopsRouteId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:background="@color/stoprow_bg_tram"
            android:gravity="center"
            android:text="@string/empty"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/stopsRouteDest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight=".8"
            android:background="@color/stoprow_bg_main"
            android:gravity="left"
            android:text="@string/empty"
            android:textColor="@color/stoprow_txt_main"
            android:textSize="12sp"
            android:typeface="sans" />
    </TableRow>

</TableLayout>